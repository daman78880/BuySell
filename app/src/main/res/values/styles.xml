<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor">@color/teal_700</item>
    </style>
<style name="TextInputLayoutAppearance">
    <item name="colorControlNormal">@color/white</item>
    <item name="colorControlActivated">@color/teal_200</item>
    <item name="colorControlHighlight">@color/teal_200</item>
</style>
    <style name="buttonStyle">
    <item name="android:layout_marginStart">@dimen/normalStartMagin</item>
    <item name="android:layout_marginEnd">@dimen/normalEndMagin</item>
    <item name="android:padding">@dimen/normalPadding</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">@dimen/normalTextSize</item>

    <item name="font">@font/inter_medium</item>
    </style>
    <style name="txtStyleNormal">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/liteGreay</item>
        <item name="android:layout_marginStart">@dimen/normalStartMagin</item>
    </style>
    <style name="txtStyle">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/signUpBtnColor</item>
        <item name="android:layout_marginStart">@dimen/normalStartMagin</item>
        <item name="android:layout_marginEnd">@dimen/normalEndMagin</item>
    </style>
    <style name="etStyleNormal">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/signUpBtnColor</item>
        <item name="android:layout_marginStart">@dimen/normalStartMagin</item>
        <item name="android:layout_marginEnd">@dimen/normalEndMagin</item>
        <item name="background">@drawable/edit_text_round</item>
        <item name="android:padding">@dimen/litePadding</item>
    </style>

</resources>