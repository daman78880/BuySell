<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardVerifyUserDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="@dimen/_18sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTitleMakeAnOfferDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/make_an_offer"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/signUpBtnColor"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/topMainMargin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etAmountMakeAnOfferDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:textColor="@color/greyColorForDialog"
                android:gravity="center"
                android:background="@drawable/et_filter"
                android:hint="@string/rupeSign"
                android:inputType="number"
                android:padding="@dimen/litePadding"
                android:textSize="@dimen/_11sdp"
                android:maxLength="18"
                android:layout_marginStart="@dimen/_54sdp"
                android:layout_marginEnd="@dimen/_54sdp"
                android:layout_marginTop="@dimen/topMainMargin"
                app:layout_constraintTop_toBottomOf="@+id/txtTitleMakeAnOfferDialog"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMakeAnOfferDialog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/make_an_offer"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="@dimen/topMainMargin"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:background="@drawable/round_sign_up_btn"
                android:layout_marginBottom="@dimen/topMainMargin"
                app:layout_constraintTop_toBottomOf="@+id/etAmountMakeAnOfferDialog"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnCancelMakeAnOfferDialog"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/topMainMargin"
        android:src="@drawable/ic_baseline_clear_24"
        android:layout_marginBottom="@dimen/_178sdp"
        app:layout_constraintBottom_toBottomOf="@+id/cardVerifyUserDialog"
        app:layout_constraintEnd_toEndOf="@+id/cardVerifyUserDialog" />
</androidx.constraintlayout.widget.ConstraintLayout>