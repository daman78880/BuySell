<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/normalStartMagin"
    android:layout_marginEnd="@dimen/normalStartMagin"
    android:layout_marginBottom="@dimen/_6sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgUserImageRvChatUser"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:background="@drawable/user_image_round"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtUserNameRvChatUser"
        android:layout_width="0dp"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/topMargin"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/temp_name"
        android:textColor="@color/signUpBtnColor"
        android:textSize="@dimen/liteBigTextSize"
        app:layout_constraintEnd_toStartOf="@+id/imgSendImageRvChatUser"
        app:layout_constraintStart_toEndOf="@+id/imgUserImageRvChatUser"
        app:layout_constraintTop_toTopOf="@+id/imgUserImageRvChatUser" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtUserBioRvChatUser"
        android:layout_width="0dp"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/viewLineMagin"
        android:fontFamily="@font/inter"
        android:text="@string/temp_name"
        android:singleLine="true"
        android:textColor="@color/signUpBtnColor"
        android:textSize="@dimen/normalTextSize"
        app:layout_constraintEnd_toStartOf="@+id/imgSendImageRvChatUser"
        app:layout_constraintStart_toEndOf="@+id/imgUserImageRvChatUser"
        app:layout_constraintTop_toBottomOf="@+id/txtUserNameRvChatUser" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtLasTimeOnlineTimeRvChatUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="@string/see_profile"
        android:textColor="@color/blue_Txt"
        android:textSize="@dimen/smallTextSize"
        app:layout_constraintStart_toStartOf="@+id/txtUserBioRvChatUser"
        app:layout_constraintTop_toBottomOf="@+id/txtUserBioRvChatUser" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSendImageRvChatUser"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginStart="@dimen/normalStartMagin"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewLineRvChatUser"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/viewLineMagin"
        android:layout_marginTop="@dimen/topFiveMargin"
        android:layout_marginEnd="@dimen/viewLineMagin"
        android:background="@color/viewLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgUserImageRvChatUser" />
</androidx.constraintlayout.widget.ConstraintLayout>